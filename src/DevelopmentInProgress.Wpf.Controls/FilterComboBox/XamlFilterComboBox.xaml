<UserControl x:Class="DevelopmentInProgress.Wpf.Controls.FilterComboBox.XamlFilterComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevelopmentInProgress.Wpf.Controls.FilterComboBox"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../themes/MetroDark/MetroDark.MSControls.Core.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True" Background="{StaticResource TextBoxBackgroundBrush}">
        <ComboBox Name="comboBox"
                  ItemsSource="{Binding FilterItemsSource, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:XamlFilterComboBox}}, UpdateSourceTrigger=PropertyChanged}"
                  IsTextSearchEnabled="True"/>
    </DockPanel>
</UserControl>