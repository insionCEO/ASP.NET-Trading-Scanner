<prism:ModuleCatalog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                     xmlns:sys="clr-namespace:System;assembly=mscorlib"
                     xmlns:prism="clr-namespace:Prism.Modularity;assembly=Prism.Wpf">

    <prism:ModuleInfo Ref="Strategies"
                      ModuleName="Strategies"
                      ModuleType="DevelopmentInProgress.Wpf.Strategies.Module,DevelopmentInProgress.Wpf.Strategies"
                      InitializationMode="WhenAvailable">
    </prism:ModuleInfo>
    
    <prism:ModuleInfo Ref="Trading"
                      ModuleName="Trading"
                      ModuleType="DevelopmentInProgress.Wpf.Trading.Module,DevelopmentInProgress.Wpf.Trading"
                      InitializationMode="WhenAvailable">
        <prism:ModuleInfo.DependsOn>
            <sys:String>Strategies</sys:String>
        </prism:ModuleInfo.DependsOn>
    </prism:ModuleInfo>

    <prism:ModuleInfo Ref="Configuration"
                      ModuleName="Configuration"
                      ModuleType="DevelopmentInProgress.Wpf.Configuration.Module,DevelopmentInProgress.Wpf.Configuration"
                      InitializationMode="WhenAvailable">
        <prism:ModuleInfo.DependsOn>
            <sys:String>Trading</sys:String>
        </prism:ModuleInfo.DependsOn>
    </prism:ModuleInfo>
    
</prism:ModuleCatalog>