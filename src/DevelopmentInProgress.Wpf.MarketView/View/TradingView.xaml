<view:DocumentViewBase x:Class="DevelopmentInProgress.Wpf.MarketView.View.TradingView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:model="clr-namespace:DevelopmentInProgress.Wpf.MarketView.Model"
                       xmlns:view="clr-namespace:DevelopmentInProgress.Wpf.Host.View;assembly=DevelopmentInProgress.Wpf.Host"
                       xmlns:converters="clr-namespace:DevelopmentInProgress.Wpf.Host.Converters;assembly=DevelopmentInProgress.Wpf.Host"
                       xmlns:filterbox="clr-namespace:DevelopmentInProgress.Wpf.Controls.FilterBox;assembly=DevelopmentInProgress.Wpf.Controls"
                       xmlns:progress="clr-namespace:DevelopmentInProgress.Wpf.Controls.Progress;assembly=DevelopmentInProgress.Wpf.Controls"
                       xmlns:localConverters="clr-namespace:DevelopmentInProgress.Wpf.MarketView.Converters"
                       xmlns:localViewModel="clr-namespace:DevelopmentInProgress.Wpf.MarketView.ViewModel"
                       xmlns:localView="clr-namespace:DevelopmentInProgress.Wpf.MarketView.View"
                       mc:Ignorable="d">
    <view:DocumentViewBase.Resources>

        <DataTemplate DataType="{x:Type localViewModel:SymbolsViewModel}">
            <localView:SymbolsView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type localViewModel:SymbolViewModel}">
            <localView:SymbolView></localView:SymbolView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type localViewModel:AccountViewModel}">
            <localView:AccountView></localView:AccountView>
        </DataTemplate>

        <converters:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
        
    </view:DocumentViewBase.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" LastChildFill="True">
            <ContentControl Content="{Binding SymbolsViewModel}"/>
        </DockPanel>

        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="2" VerticalAlignment="Stretch" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>
        <GridSplitter Grid.Row="1" Grid.Column="0" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"/>

        <DockPanel Grid.Row="2" Grid.Column="0" LastChildFill="True">
            <ContentControl Content="{Binding AccountViewModel}"/>
        </DockPanel>
        
        <DockPanel Margin="5" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" LastChildFill="True">
            <ContentControl Content="{Binding SymbolViewModel}" Visibility="{Binding HasSelectedSymbol, Converter={StaticResource boolToVisibilityConverter}}"/>
        </DockPanel>
    </Grid>
</view:DocumentViewBase>